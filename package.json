  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.0",
  "homepage": "https://syv-labs.org",
  "keywords": [
    "syv-labs",
    "periphery"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/syv-labs/surge-periphery"
  },
  "files": [
    "contracts/base",
    "contracts/interfaces",
    "contracts/libraries",
    "artifacts/contracts/**/*.json",
    "!artifacts/contracts/**/*.dbg.json",
    "!artifacts/contracts/test/**/*",
    "!artifacts/contracts/base/**/*"
  ],
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.4.2-solc-0.7",
    "@openzeppelin/contracts-upgradeable": "3.4.2-solc-0.7",
    "@openzeppelin/hardhat-upgrades": "1.22.1",
    "@syvlabs/surge-core": "https://github.com/syv-labs/surge-core",
    "base64-sol": "1.0.1"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^4.0.0",
    "@types/chai": "^4.2.6",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "decimal.js": "^10.2.1",
    "ethereum-waffle": "^3.0.2",
    "ethers": "^5.0.8",
    "hardhat": "^2.6.8",
    "hardhat-typechain": "^0.3.5",
    "hardhat-watcher": "^2.1.1",
    "is-svg": "^4.3.1",
    "mocha": "^6.2.2",
    "mocha-chai-jest-snapshot": "^1.1.0",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-beta.10",
    "solhint": "^3.2.1",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-generator": "^0.1.1",
    "ts-node": "^8.5.4",
    "typechain": "^4.0.0",
    "typescript": "^3.7.3"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "build": "hardhat clean && hardhat compile",
    "clean:artifacts": "find artifacts -name '*.dbg.json' -type f -delete && find artifacts -type d -name 'build-info' -exec rm -rf {} + 2>/dev/null || true",
    "release": "npm run build && npm run clean:artifacts && npm publish",
    "release-snapshot": "npm run build && npm run clean:artifacts && npm version 0.0.0-snapshot.$(git rev-parse --short HEAD) --git-tag-version=false && npm publish --no-git-checks --tag snapshot --access public"
  }
}
